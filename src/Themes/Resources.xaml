                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                    <VisualState.Setters>
                                        <Setter Target="ExpandCollapseChevron.(controls:AnimatedIcon.State)"
                                                Value="PointerOverOff" />

                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="Pressed">

